<style>
  .slide {
    background-color: red;
  }

  button.selected {
    font-weight: bold;
  }
</style>

<h2>What is your favourite colour? [{{session2.user.metadata.favouriteColour}}]</h2>

{{#each (array 'red' 'green' 'blue') as |colour|}}
  <button onClick={{action 'chooseColour' colour}} class='{{if (eq colour session2.user.metadata.favouriteColour ) 'selected'}}'>{{colour}}</button>
{{/each}}
