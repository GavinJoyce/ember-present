{{#component slideContainerComponent as |api|}}
  {{#let (get slide (concat session.role 'ComponentPath')) as |componentPath|}}
    {{#if (get slide (concat session.role 'SlideIsMissing'))}}
      [{{slide.componentName}} component is missing]
    {{else}}
      {{component
        componentPath
        slide=api
        slides=slides
        session=session
      }}
    {{/if}}
  {{/let}}
{{/component}}
